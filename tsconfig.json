{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleDetection": "force", // Каждый файл является модулем
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
